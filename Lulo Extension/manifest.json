{
    "manifest_version": 3,
    "name": "Lulo - AI Assistant",
    "version": "1.0.0",
    "description": "Superpowers for normal people. Your AI team for browser automation.",
    "permissions": [
        "activeTab",
        "sidePanel",
        "storage",
        "tabs",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "https://*.heylulo.com/*",
        "https://*.heylulo.com/*",
        "https://heylulo.com/*",
        "https://lulo-agent.pages.dev/*",
        "<all_urls>"
    ],
    "externally_connectable": {
        "matches": [
            "http://localhost:3000/*",
            "https://*.heylulo.com/*",
            "https://heylulo.com/*",
            "https://lulo-agent.pages.dev/*"
        ]
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel/sidepanel.html"
    },
    "commands": {
        "_execute_side_panel": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Open Lulo Side Panel"
        }
    },
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}